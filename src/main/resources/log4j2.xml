<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO">

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
			<Filters>
				<ThresholdFiler level="info" onMatch="ACCEPT" onMismatch="DENY"/>
			</Filters>
		</Console>
		
		<File name="File" fileName="log/Bakery-application.log">
			<PatternLayout pattern="%d{yyy-MM-DD HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
			<Filters>
				<TheasholdFiler level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
			</Filters>
		</File>
	</Appenders>
	
	<Loggers>
		<Root level="trace">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</Root>
	</Loggers>
		
</Configuration>